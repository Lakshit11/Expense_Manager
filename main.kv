<ClearScreen>:
    canvas.before:
        Color:
            rgba:(0.12,0.59,0.58,1)
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        
        cols:1
        padding: 30, 30
        spacing: 10, 10

        GridLayout:
            
            cols:2
            padding: 30, 30
            spacing: 30, 30

            Button:
                text: "Go Back"
                halign: "left"
                valign: "center"
                on_press: root.goback()
                size_hint : .10, .10

            Button:
                halign: "right"
                valign: "center"
                text: "Logout"
                on_press: root.home()
                size_hint : .10, .10
        
        Label:
            id:cleardata
            text : "Are you sure you want to clear data?"
        
        TextInput:
            id:usid
            size_hint : 0.50, 0.50
            hint_text : "Enter Username Here"
            multiline : False

        TextInput:
            id:pid
            password : True
            size_hint : 0.50, 0.50
            hint_text : "Enter Password Here"
            multiline : False

        Button:
            text : "Submit"
            size_hint : .5, .5
            on_press : root.clear(root.ids.usid.text, root.ids.pid.text)

