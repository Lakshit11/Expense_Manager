<Home>:
    canvas.before:
        Color:
            rgba:(0.12,0.59,0.58,1)
            # rgba : (161/255, 166/255, 169/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1

        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20

            ScrollView:

                Label:
                    id: quote
                    text: "Enter Your Username And Password to Login OR Create New Account using Sign Up Button"
                    halign: "center"
                    valign: "middle"
                    text_size: self.width, None
                    height: self.texture_size[1]
                    color : 0, 0, 0, 1

            TextInput:
                id: username
                hint_text: "Username"
                multiline : False

            TextInput:
                id: password
                hint_text: "Password"
                password: True
                multiline : False

            RelativeLayout:

                Button:
                    size_hint: .5,.5
                    text: "Login"
                    font_size: "18sp"
                    pos_hint: {"center_x": .5,"center_y": .6}
                    on_press: root.signin(root.ids.username.text, root.ids.password.text)

            GridLayout:
                cols: 2
                padding: 10, 10
                spacing: 10, 0

                Button:
                    text: "Forgot Password"
                    on_press: root.fg()

                Button:
                    text: "Sign Up"
                    on_press: root.next()


<SignUpScreen>:
    canvas.before:
        Color:
            rgba:(0.12,0.59,0.58,1)
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1
        padding: 30,30
        spacing: 10,10
       
        GridLayout:
            
            cols:1
            Button:
                halign: "left"
                valign: "middle"
                text: "Go Back"
                on_press: root.goback()
                size_hint : .10, .10

        Label:
            id: same
            text: "Enter Username And Password Below"

        TextInput:
            id: name
            hint_text: "Enter Username"
            multiline : False

        TextInput:
            id: password1
            password: True
            hint_text: "Enter Password"
            multiline : False

        TextInput:
            id: password2
            password: True
            hint_text: "Confirm Password"
            multiline : False

        Button:
            text: "Submit"
            on_press: root.adduser(root.ids.name.text, root.ids.password1.text, root.ids.password2.text)


<SubmitScreen>:
    canvas.before:
        Color:
            rgba:(0.12,0.59,0.58,1)
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        
        cols: 1
        padding: 30, 30
        spacing: 10, 10
        
        GridLayout:
            cols: 3
            padding: 10, 10
            spacing: 10, 10

            Button:
                halign: "left"
                valign: "middle"
                text: "Go Back"
                on_press: root.goback()
                size_hint : .10, .10

            Button:
                halign: "left"
                valign: "middle"
                text: "Clear Data"
                on_press: root.clearData()
                size_hint : .10, .10

            Button:
                halign: "right"
                valign: "center"
                text: "Logout"
                on_press: root.home()
                size_hint : .10, .10

        ScrollView:

            Label:
                halign: "center"
                valign: "middle"
                id: submitex
                text: "Click to Add Money or View or Contribute"
                text_size: self.width, None
                height: self.texture_size[1]

        GridLayout:
            cols: 2
            padding: 10, 10
            spacing: 10, 10

            Button:
                size_hint: .10, .10
                text: "Add Expense"
                size_hint : .10, .10
                on_press: root.addex()

            Button:
                size_hint : .10, .10
                font_size : '15sp'
                text: "Split"
                on_press: root.contribute()
        GridLayout:
            cols:1
            padding: 10, 10
            spacing: 10,10    
            Button:
                size_hint : .10, .10
                text: "View Expenses"
                on_press: root.gra()


<ForgotScreen>:
    canvas.before:
        Color:
            rgba:(0.12,0.59,0.58,1)
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        
        cols: 1
        padding: 30, 30
        spacing: 10, 10
        
        GridLayout:
            
            cols:1
            Button:
                halign: "left"
                valign: "middle"
                text: "Go Back"
                on_press: root.goback()
                size_hint : .10, .10
                
        Label:
            id: lbf
            text: "Enter Username and New Password"

        TextInput:
            id: fgname
            size_hint: .5, .5
            hint_text: "Enter Username"
            multiline : False

        TextInput:
            id: newp
            size_hint: .5, .5
            password: True
            hint_text: "New Password"
            multiline : False

        TextInput:
            id: confirm
            size_hint: .5, .5
            password: True
            hint_text: "Confirm Password"
            multiline : False

        Button:
            text:"Submit"
            size_hint : .50, .50
            on_press: root.forgot(root.ids.fgname.text, root.ids.newp.text, root.ids.confirm.text)


<AddExpense>:
    canvas.before:
        Color:
            rgba:(0.12,0.59,0.58,1)
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1
        padding: 10, 10
        spacing: 10, 10

        GridLayout:
            cols: 2
            padding: 30, 30
            spacing: 30, 30
            
            Button:
                halign: "left"
                valign: "middle"
                text: "Go Back"
                on_press: root.goback()
                size_hint : .10, .10

            Button:
                halign: "right"
                valign: "center"
                text: "Logout"
                on_press: root.home()
                size_hint : .10, .10

        Label:
            id: expen
            text: "Add your Expense Below"
        
        TextInput:
            id:comment
            hint_text:"Enter Comment Here"
            multiline:False
            size_hint: .45, .45

        TextInput:
            id: amount
            input_filter: "int"
            hint_text: "Enter Amount Here"
            multiline:False
            size_hint: .45, .45

        Button:
            text: "Add"
            size_hint: .35, .45
            on_press: root.addexpense(root.ids.amount.text, root.ids.comment.text)


